<UserControl x:Class="QuizLab3WPF.Views.PlayView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Background="CornflowerBlue">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!--Tittle -->
        <StackPanel Grid.Row="0" Margin="12" >
            <TextBlock Text="Play Quiz"
                       FontSize="30"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>

         
            <StackPanel Orientation="Horizontal" Margin="0,8,0,0" HorizontalAlignment="Center">
                <TextBlock Text="Category:" VerticalAlignment="Center" Margin="0,0,6,0"/>
                <ComboBox x:Name="CategoryCombo" Width="220" Margin="0,0,8,0"/>
                <Button x:Name="StartButton" Content="Start"
                        Width="100" Click="StartButton_Click"/>
            </StackPanel>
            
        </StackPanel>

        <Border Grid.Row="1" Margin="16" Padding="20"
                CornerRadius="15" Background="Gray"
                BorderBrush="Aqua" BorderThickness="5">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>                
                    <RowDefinition Height="200"/>                
                    <RowDefinition Height="Auto"/>              
                    <RowDefinition Height="Auto"/>                    
                    <RowDefinition Height="Auto"/>                 
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Question -->
                <TextBlock Grid.Row="0"
                           Text="{Binding Statement, TargetNullValue=Choose category and press Start}"
                           FontSize="20"
                           FontFamily="Arial"
                           TextWrapping="Wrap"/>

                <!-- Bild -->
                <Image x:Name="QuizImage"
                       Grid.Row="1"
                       Margin="0,14"
                       MaxHeight="300"
                       MaxWidth="300"
                       Stretch="UniformToFill"
                       Source="{Binding ImagePath}">
                    <Image.Style>
                        <Style TargetType="Image">
                            <Setter Property="Visibility" Value="Visible"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Source, RelativeSource={RelativeSource Self}}"
                                             Value="{x:Null}">
                                    <Setter Property="Visibility" Value="Collapsed"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Image.Style>
                </Image>

                <!-- Place holder if there is not image -->
                <Border Grid.Row="1" CornerRadius="8" Margin="0,8,0,12"
                        Background="#EEEEEE" BorderBrush="#DDDDDD" BorderThickness="1">
                    <Border.Style>
                        <Style TargetType="Border">
                            <Setter Property="Visibility" Value="Collapsed"/>
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ElementName=QuizImage, Path=Visibility}" Value="Collapsed">
                                    <Setter Property="Visibility" Value="Visible"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <TextBlock Text="Image Holder"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               Opacity="0.9"/>
                </Border>

                <!-- Answer -->
                <StackPanel Grid.Row="2" Margin="0,0,0,6">
                    <Button x:Name="ButtonA" Content="{Binding Answers[0]}" Margin="0,0,0,6" Click="ButtonA_Click"/>
                    <Button x:Name="ButtonB" Content="{Binding Answers[1]}" Margin="0,0,0,6" Click="ButtonB_Click"/>
                    <Button x:Name="ButtonC" Content="{Binding Answers[2]}" Margin="0,0,0,6" Click="ButtonC_Click"/>
                </StackPanel>

                <!-- Next  -->
                <Grid Grid.Row="3" Margin="0,6,0,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <Button Grid.Column="0"
                            x:Name="NetQizutn"
                            Content="Next"
                            Background="Orange"
                            HorizontalAlignment="Left"
                            Margin="0,0,8,0"
                            Click="NetQizutn_Click"/>

                    <Button Grid.Column="1"
                            x:Name="RestartButton"
                            Content="Restart"
                            Background="LightGray"
                            HorizontalAlignment="Right"
                            Click="RestartButton_Click"/>
                </Grid>

                <!-- Status and point -->
                <StackPanel Grid.Row="4" Margin="0,8,0,0">
                    <TextBlock x:Name="StatusText"
                               Opacity="0.9"
                               FontSize="18"
                               Margin="0,0,0,4"/>
                    <TextBlock x:Name="ScoreText"
                               Opacity="0.9"
                               FontSize="16"/>
                </StackPanel>
            </Grid>
        </Border>

        <!-- Informations -->
        <DockPanel Grid.Row="2" LastChildFill="False" Margin="12,0,12,12">
            <TextBlock DockPanel.Dock="Left" Opacity="0.9">
                <Run Text="Category: "/>
                <Run Text="{Binding Category, TargetNullValue=--}"/>
            </TextBlock>
        </DockPanel>
    </Grid>
</UserControl>
